{% form_theme form 'form/product.html.twig' %}
{% extends 'admin.html.twig' %}
{% block breadcrumb %}
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">Product</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="{{ url('admin_product_homepage') }}">Dashboard</a></li>
                <li class="breadcrumb-item active">Manage product</li>
            </ol>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                {{ form_start(form, {'id': 'myForm'}) }}
                <div class="card-header">
                    <h5 class="card-title">
                        Manage product
                        {% if form.vars.slug is not empty %}
                            &mdash;   <a href="{{ url('product', {slug: form.vars.slug}) }}" target="_blank">Show in
                            page</a>
                        {% endif %}
                    </h5>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form) }}
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn-primary btn" type="submit">
                        Save
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block form_row %}
    <div class="row">
        {{ form_label(form) }}
        <div class="col-6">
            {{ form_widget(form) }}
            {{ form_errors(form) }}
        </div>
        {{ form_help(form) }}
    </div>
{% endblock %}
 {% block _product_title_widget %}
     <input type="text" value="{{ value }}" id="{{ id }}" name="{{ full_name }}" class="form-control form-control-lg"/>
 {% endblock %}
{% block form_errors %}
    {% if errors|length > 0 %}
        <div class="alert alert-danger">
            {% for error in errors %}
                <p>{{ error.message }}</p>
            {% endfor %}
        </div>
    {% endif %}
    {#{% if errors|length > 0 %}

    {% endif %}#}
{% endblock %}

{#{% block money_widget %}

{% endblock %}#}

{% block javascripts %}
    <script src="https://cdn.tiny.cloud/1/{{ tiny_api_id }}/tinymce/5/tinymce.min.js"
            referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
            toolbar_mode: 'floating',
        });
        $('#myForm').on('submit', function () {
            tinyMCE.triggerSave();
        })
    </script>
{% endblock %}