{% extends 'admin.html.twig' %}
{% block breadcrumb %}
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">Product</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="{{ url('admin_product_homepage') }}">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ url('admin_product_add') }}">Add</a></li>
            </ol>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <td scope="col">Image</td>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th/>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr class="">
                        <th scope="row">{{ product.id }}</th>
                        <td>
                            <img src="{{ product.coverImage }}" width="100" height="100"/>
                        </td>
                        <td>
                            <a href="{{ url('product', {slug: product.slug}) }}" target="_blank">
                                {{ product.title }}
                            </a>
                            {% if product.featured %}
                                <label class="badge badge-info">Featured</label>
                            {% endif %}
                        </td>
                        <td>{{ product.category.category }}</td>
                        <td>
                            <a href="{{ url('admin_product_edit', {id: product.id}) }}" class="btn btn-info">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://js.pusher.com/7.0/pusher.min.js"></script>
    <script>
        // Enable pusher logging - don't include this in production
        Pusher.logToConsole = true;
        var pusher = new Pusher('0feb96eef409285126da', {
            cluster: 'eu'
        });
        var channel = pusher.subscribe('my-channel');
        channel.bind('my-event', function (data) {
            $('#notifications_container').append('<a href="#" class="dropdown-item">\n' +
                '                        <div class="media">\n' +
                '                            <img src="https://i.pravatar.cc/128" alt="User Avatar" class="img-size-50 mr-3 img-circle">\n' +
                '                            <div class="media-body">\n' +
                '                                <h3 class="dropdown-item-title">\n' +
                '                                    '+data.name+'\n' +
                '                                    <span class="float-right text-sm text-danger"><i class="fas fa-star"></i></span>\n' +
                '                                </h3>\n' +
                '                                <p class="text-sm">'+data.message+'</p>\n' +
                '                                <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i> 4 Hours Ago</p>\n' +
                '                            </div>\n' +
                '                        </div>\n' +
                '                    </a>\n' +
                '                    <div class="dropdown-divider"></div>');
            $('#comments_count').text(parseInt($('#comments_count').text()) + 1)
            /*alert(JSON.stringify(data));*/
        });
    </script>
{% endblock %}