{% extends 'admin.html.twig' %}
{% block breadcrumb %}
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">Product</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="{{ url('admin_product_homepage') }}">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="{{ url('admin_product_add') }}">Add</a></li>
            </ol>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <td scope="col">Image</td>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th/>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr class="">
                        <th scope="row">{{ product.id }}</th>
                        <td>
                            <img src="{{ product.coverImage }}" width="100" height="100"/>
                        </td>
                        <td>
                            <a href="{{ url('product', {slug: product.slug}) }}" target="_blank">
                                {{ product.title }}
                            </a>
                        {% if product.featured %}
                            <label class="badge badge-info">Featured</label>
                            {% endif %}
                        </td>
                        <td>{{ product.category.category }}</td>
                        <td>
                            <a href="{{ url('admin_product_edit', {id: product.id}) }}" class="btn btn-info">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}