{% extends 'base.html.twig' %}

{% block title %}Hello AuthorController!{% endblock %}

{% block body %}
<div class="row">
    {% for author in authors %}
        <div class="col-4">
            <div class="card bg-light mb-3" style="max-width: 20rem;">
                <div class="card-header">{{ author.name }}</div>
                <div class="card-body">
                    <h4 class="card-title">BIO</h4>
                    <p class="card-text">
                        {{ author.bio }}
                    </p>
                </div>
                <div class="card-footer">
                    <a href="{{ path('books_author', {"slug": author.slug}) }}" class="btn btn-success">
                        Books
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
